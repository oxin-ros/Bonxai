<launch>

    <node pkg="nodelet" type="nodelet" name="bonxai_mapping"
        args="standalone bonxai_server/BonxaiServer" output="screen">

        <!-- VoxelGrid Resolution -->
        <param name="resolution" value="0.05" />

        <!-- fixed map frame (set to 'map' if SLAM or localization running!) -->
        <param name="frame_id" value="map" />

        <!-- maximum range to integrate (speedup!) -->
        <param name="sensor_model/max_range" value="12.0" />
        <param name="sensor_model/hit" value="0.7" />
        <param name="sensor_model/mis" value="0.6" />
        <param name="sensor_model/min" value="0.12" />
        <param name="sensor_model/max" value="0.97" />

        <!-- Publish Height colormap on Resulting VoxelGrid -->
        <param name="use_height_map" value="true" />

        <!-- data source to integrate (PointCloud2) -->
        <remap from="~cloud_in" to="/livox/lidar" />

        <param name="latch" value="false" />

    </node>
</launch>
